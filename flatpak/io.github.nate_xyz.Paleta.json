{
    "app-id" : "io.github.nate_xyz.Paleta",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "command" : "paleta",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "pypi-dependencies.json",
        {
            "name" : "paleta",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type": "dir",
                    "path": "../."
                }
            ]
        }
    ]
}
