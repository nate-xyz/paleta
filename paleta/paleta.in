import os
import sys
import signal
import locale
import gettext
from pathlib import Path

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'


signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('paleta', localedir)
locale.textdomain('paleta')
gettext.install('paleta', localedir)

if __name__ == '__main__':
    import gi

    from gi.repository import Gio

    if os.environ.get('MESON_DEVENV') != None:
        dev_path = os.path.join(os.path.abspath(os.path.dirname(sys.argv[0])))
        source_dir = str(Path(dev_path).parent.parent)

        sys.path.insert(1, source_dir)
        resource = Gio.Resource.load(os.path.join(dev_path, 'paleta.gresource'))

    else:
        sys.path.insert(1, pkgdatadir)
        resource = Gio.Resource.load(os.path.join(pkgdatadir, 'paleta.gresource'))

    resource._register()

    from paleta import main
    sys.exit(main.main(VERSION))